<html>
  <head>
    <title>RecipeNation</title>
    <link href="http://cdn.jsdelivr.net/bootstrap/2.3.0/css/bootstrap-responsive.min.css" rel="stylesheet" type="text/css">
    <style>
      body {
        margin: 0 auto;
        width: 600px;
      }
 
      .recipe {
        background: #eee;
        border: 1px solid #ccc;
        margin: 5px;
        padding: 10px;
      }
 
      .add_post {
        background: #eee;
        border: 1px solid #ccc;
        margin: 5px;
        padding: 10px;
        border-radius: 10px;
      }
    </style>
  </head>
  <body>
	  
	<div class='recipe'>
    <% for (i = recipes.length-1; i>=0;i--){ %>    
      <a href='/recipe/<%= recipes[i]._id %>'><h3><%= recipes[i].title %></h3></a>
    <% } %>    
    </div>
    <div class='recipe'>
	<h3>Cold:</h3>
	<ol>
    <% for (i = recipes.length-1; i>=0;i--){ %>    
      <% for(j = recipes[i].ingredients.length-1; j>0;j--){%>			
		<% if(recipes[i].ingredients[j].category === 'cold'){%>
		  <ul>
		  <%=recipes[i].ingredients[j].item%>
		  <%}%>
		  </ul>
      <%}%>
    <%}%>    
    </ol>
    </div>
    
    <div class='recipe'>
	<h3>Meat:</h3>
	<ol>
    <% for (i = recipes.length-1; i>=0;i--){ %>    
      <% for(j = recipes[i].ingredients.length-1; j>=0;j--){%>
		<% if(recipes[i].ingredients[j].category ==='meat'){%>
		  <ul>
		  <%=recipes[i].ingredients[j].item%>
		  <%}%>
		  </ul>
      <%}%>
    <%}%>    
    </ol>
    </div>
    
    <div class='recipe'>
	<h3>Grains:</h3>
	<ol>
    <% for (i = recipes.length-1; i>=0;i--){ %>    
      <% for(j = recipes[i].ingredients.length-1; j>=0;j--){%>
		<% if(recipes[i].ingredients[j].category ==='grains'){%>
		  <ul>
		  <%=recipes[i].ingredients[j].item%>
		  <%}%>
		  </ul>
      <%}%>
    <%}%>    
    </ol>
    </div>
    
    <div class='recipe'>
	<h3>Produce:</h3>
	<ol>
    <% for (i = recipes.length-1; i>=0;i--){ %>    
      <% for(j = recipes[i].ingredients.length-1; j>=0;j--){%>
		<% if(recipes[i].ingredients[j].category ==='recipe'){%>
		  <ul>
		  <%=recipes[i].ingredients[j].item%>
		  <%}%>
		  </ul>
      <%}%>
    <%}%>    
    </ol>
    </div>
     
        <div class='recipe'>
	<h3>Cans/Jars:</h3>
	<ol>
    <% for (i = recipes.length-1; i>=0;i--){ %>    
      <% for(j = recipes[i].ingredients.length-1; j>=0;j--){%>			
		<% if(recipes[i].ingredients[j].category ==='cans/jars'){%>
		  <ul>
		  <%=recipes[i].ingredients[j].item%>
		  <%}%>
		  </ul>
      <%}%>
    <%}%>    
    </ol>
    </div>
    
        <div class='recipe'>
	<h3>Other:</h3>
	<ol>
    <% for (i = recipes.length-1; i>=0;i--){ %>    
      <% for(j = recipes[i].ingredients.length-1; j>=0;j--){%>
		<% if(recipes[i].ingredients[j].category ==='other'){%>
		  <ul>
		  <%=recipes[i].ingredients[j].item%>
		  <%}%>
		  </ul>
      <%}%>
    <%}%>    
    </ol>
    </div>    
        
  </body>
</html>
